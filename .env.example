# ShieldCall VN Backend - Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=shieldcall_db
DB_USER=shieldcall_user
DB_PASSWORD=secure-password-here
DB_HOST=localhost
DB_PORT=3306
DB_CHARSET=utf8mb4

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1
REDIS_BROKER_URL=redis://127.0.0.1:6379/0
REDIS_CACHE_URL=redis://127.0.0.1:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_TIMEZONE=Asia/Ho_Chi_Minh

# External APIs (For production - uncomment when implementing)
# OPENAI_API_KEY=sk-your-key-here
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_SPEECH_CREDENTIALS=/path/to/credentials.json
# GOOGLE_VISION_CREDENTIALS=/path/to/credentials.json

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default

# Phone Cache Configuration
PHONE_CACHE_TIMEOUT_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/shieldcall/django.log

# Security (HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# Email Configuration (for alerts)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Error Tracking (Optional - Sentry)
# SENTRY_DSN=https://key@sentry.io/project-id

# Media Files
MEDIA_ROOT=/var/www/shieldcall/media
MEDIA_URL=/media/

# Static Files
STATIC_ROOT=/var/www/shieldcall/static
STATIC_URL=/static/

# Application Settings
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
